@import 'nib'
$blueColor = #125daa

// TITULOS
h2
	color gray
	font-weight 200
	&:first-line
		color $blueColor
	span
		color gray

html, body
	min-heigh 100%
	height 100%
header
	left 0
	right 0
	margin-left auto
	margin-right auto
	height 100px
	.container
		display flex
		// align-items center
		.burger
			font-size 2em
			flex-basis 10%
		.logo
			flex-basis 100%
			text-align center
			img
				height 100px
				display inline-block
		nav
			flex-grow 2
			text-align right
			div
				background-color $blueColor
				display inline-block
				padding 1em
				box-shadow 1px 1px 5px black
				ul 
					display flex
					justify-content flex-end
					list-style none
					padding 0
					margin 0
					li 
						a
							color white
							&:after
								content "l"
								padding-left 0.7em
								padding-right 0.7em				
		.redes
			font-size 2.5em
			padding-left 0.5em
			a
				.fa-facebook
					color #125daa
				.fa-twitter
					color #55acee
.banner
	// background-image url('img/banner.jpg')
	background-size cover
	height 50%
	.container
		display flex
		align-items flex-end
		height 100%
		.text
			margin-bottom 4em
			h1
				color white
				font-weight 200
			p 
				color yellow
.main 
	background-color #f7f7f7
	padding-bottom 2em
	.wrapBox
		display flex
		flex-wrap wrap
		justify-content space-between
		.box ,.widget
			flex-basis 100%
			padding 0.3em
			list-style none
			div
				// border-style dashed
				// border-width 1px
				min-height 200px
				display flex
.bottom
	.threboxContainer
		.box,.widget
			flex-basis 32.33%
			margin 3px
			&__title,.widgettitle
				background-color $blueColor
				color white !important
				font-size 1.5em
				padding 0.3em
				text-align center
				font-weight 200
				&:first-line
					color white
			&__main
				padding 0.5em
		li 
			list-style none
.mobile
	background-color #005bab
	position fixed
	top 0
	width 70%
	height 100%
	margin-top 100px
	ul
		list-style none
		margin 0
		padding 0
		li
			padding .5em
			background-color rgba(255,255,255, .2)
			margin-top 2px
			a
				color white
	transform translate3d( -100%, 0, 0)
	transition all 0.3s ease-in-out

.showMobilMenu
	transform translate3d( 0, 0, 0) !important
footer
	border-top solid 5px #fbe108
	color gray
	text-align center
	.lineColor
		background-color red
		height 10px
		border-bottom solid 5px #005bab
		


// BOXES
#iso-9001
	background-image url('../img/ISO9001.jpg')
	background-size cover
	background-position center
	
// page

.page
	img
		width auto
		height 100%

// LISTA DE POST PAR ANOTIICAS
.all-post
	display none
@import 'medias'
		













