.menus
	position relative
	.mespecialidades
		background-color #88D9EE
	.mconsultas
		background-color #2A4F7B
	.menu-fijo
		position relative !important
		transform translate3d(0 ,-0%,0 ) !important
	.submenu
		z-index 2
		width 100%
		height 27em
		position absolute
		transform translate3d(0 ,-100%,0 )
		transition all .3s ease
		.container
			padding-top 2em
			.list-wrap
				display flex
				.box
					width 25%
					ul
						list-style none
						margin 0
						padding 0
						color white
						li
							padding-top 0.5em
							padding-bottom 0.5em
							display flex
							align-items center
							transition all 0.3s ease
							a
								color white
								text-decoration none
							&:hover
								background-color rgba(255,255,255, 0.3)
		.reset-submenu
			transform translate3d(0 ,0%,0 ) !important
			position relative !important
	.show-sub-menu
			transform translate3d(0 ,0%,0 ) !important